{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "require-await": "error",
        "no-return-await": "error",
        "no-unused-vars": "error",
        "prettier/prettier": ["error"]
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "prettier"
    ]
}